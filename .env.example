# OpenAI API Key (required for embeddings and LLM)
OPENAI_API_KEY=your_openai_api_key_here

# Flask Secret Key (required for session security)
SECRET_KEY=your-secret-key-here-change-in-production

# Optional: Model configurations
OPENAI_MODEL=gpt-3.5-turbo
EMBEDDING_MODEL=text-embedding-ada-002

# Optional: Flask server configuration
PORT=5000
FLASK_HOST=127.0.0.1
FLASK_DEBUG=False

# Optional: Chatbot configuration
CHATBOT_VERBOSE=False

# Optional: Query Cache Configuration (for cost reduction)
QUERY_CACHE_ENABLED=True
QUERY_CACHE_SIMILARITY_THRESHOLD=0.95
QUERY_CACHE_TTL=86400
